    //   }
    //   if (scrollPos > currPos)
    //   {
    //       console.log('scroll left');
    //   }

    //   scrollPos = currPos;
    // });

    $('.social-card').on('swipeleft', function(e) {
      showNextCard();
    });

    $('.social-card').on('swiperight', function(e) {
      showPreviousCard();
    });

    $('.my-update').on('click', function() {
      window.location = '/new-social?create=true';
    });
  });
